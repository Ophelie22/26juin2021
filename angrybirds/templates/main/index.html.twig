{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Hello MainController!{% endblock %}

{% block body %}

<h1>A Field Guide to Angry Birds</h1>

<h2>Games that lodge in the brain often have comical stars</h2>

<div class="row">
    {% for bird in birds %}
        <div class="col-4">
            <div class="card border-primary mb-3">
                <div class="card-body text-center">
                    <p class="card-text"><img src="images/{{ bird.image }}" alt=""></p>
                    <h4 class="card-title"><a href="{{ path('bird') }}">{{{ bird.name }}</h4>
                </div>
            </div>
        </div>           
    {% endfor %}
</div>

{% endblock %}